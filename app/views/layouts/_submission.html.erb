<%= form_for @person do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.label :gender %>
  <%= f.text_field :gender %>

  <%= f.label :hair_color %>
  <%= f.select :hair_color, ['Brown', 'Black', 'Red', 'Blonde', 'Other'] %>

  <%= f.label :eye_color %>
  <%= f.select :eye_color, ['Brown', 'Gray', 'Blue', 'Green', 'Hazel', 'Other'] %>

  <%= f.submit %>
<% end %>